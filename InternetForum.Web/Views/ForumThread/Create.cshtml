@model InternetForum.Web.Models.ForumThread.ForumThreadEditorViewModel
@{
    ViewData["Title"] = "Vytvořit nové vlákno";
}

@*Formulář pro přidání vlákna příspěvků*@

<h2> Vytvořit nové vlákno </h2>

<form asp-action="Create" asp-controller="ForumThread" class="c-form">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>

        @* Vstupní pole pro vlastnost Description v modelu *@
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Přidat nové vlákno</button>
</form>